
<!-- This is the template for devise views. It acts like an application.html.erb. This is what formats all the forms to look how they do. This is the video I used that gave me directions about using materializecss https://www.youtube.com/watch?v=68BlxiHW7CI-->


<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>

    <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" src="assets/css/materialize.min.css"  media="screen,projection"/>

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  </head>

  <body class="unique">
    <%= render 'layouts/header' %>

      <div id="container">

        <div class="row">        <!-- create the row -->
          <div class="col s6">   <!-- create the first column div -->
            <p><%=image_tag("Abilitree-front.png", :size => "500x500")%></p>
          </div>

      
            <div class="col s6">
              <div class="card ">
                  <div class="card-content">
                        <!-- This is for devise above container for styling-->
                      <% if notice %>
                           <p class="alert alert-success"><%= notice %></p>
                      <% end %>

                      <% if alert %>
                           <p class="alert alert-danger"><%= alert %></p>
                      <% end %>
                    <%= yield %>
                  </div>
              </div>
            </div>
        </div>
    </div>
    <!--Import jQuery before materialize.js-->
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
     <script type="text/javascript" src="/assets/js/materialize.min.js"></script>
    <%= render 'layouts/footer' %>
  </body>
</html>
