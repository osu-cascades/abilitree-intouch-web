
<!-- This is the template for devise views. It acts like an application.html.erb. This is what formats all the forms to look how they do. This is the video I used that gave me directions about using materializecss https://www.youtube.com/watch?v=68BlxiHW7CI-->


<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>

    <!-- All the script below is per the video (link above) -->

    <!-- Google cdn -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

      <!-- Compiled and minified JavaScript -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

      <!-- This is when you shorten the browser window and then a collapse side bar appears. Makes a more responsive website http://materializecss.com/navbar.html mobile collapse buttton-->
      <script>
        $( document ).ready(function() {
          $(".button-collapse").sideNav();
        })
      </script>
  </head>

  <body class="unique">
    <%= render 'layouts/header' %>
          

      <div id="container">

        <div class="row">        <!-- create the row -->
          <div class="col s6">   <!-- create the first column div -->
            <p><img id="box-squares" src="/assets/Abilitree-PixTeller.jpg" width="500" height="500"></p>
          </div>

      
            <div class="col s6">
              <div class="card ">
                  <div class="card-content">
                        <!-- This is for devise above container for styling-->
                      <% if notice %>
                           <p class="alert alert-success"><%= notice %></p>
                      <% end %>

                      <% if alert %>
                           <p class="alert alert-danger"><%= alert %></p>
                      <% end %>
                    <%= yield %>
                  </div>
              </div>
            </div>
        </div>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
