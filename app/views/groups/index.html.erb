<% provide(:title, "Groups") %>

<h1>Groups</h1>

<p>
  <%= link_to "Create New Group", new_group_path %> 
</p>

<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.name%></td>
            <td><%= link_to 'Edit', edit_group_path(group), class: 'btn btn-mini'  %></td>
            <td><%= link_to 'Delete', group, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>