<% provide(:title, "Notifications") %>

<h1>Notifications</h1>
<p>
  View and <%= link_to "create", notifications_new_path %> notification.
</p>


<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>From</th>
          <th>Date</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @notification.each do |notification| %>
          <tr>
            <td><%= notification.title %></td>
            <td><%= notification.first_name %></td>
            <td><%= notification.date.strftime("%a %B %d, %r")%> </td>
            <td><%= notification.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>