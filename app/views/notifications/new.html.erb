<% provide(:title, 'Create Message') %>
<h1>New Message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@notification) do |f| %>
    <%= render 'shared/noterror_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :To %>
      <%= select(:group, :group_id, Group.all.collect {|g| [g.name, g.id] }, include_blank: true) %>


      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>

      <%= f.submit "Create my message", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


