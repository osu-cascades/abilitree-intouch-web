<% provide(:title, 'Create Message') %>
<h1>New Message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@notification) do |f| %>
    <%= render 'shared/noterror_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :To %>
      <%= f.collection_select(:groups, Group.all, :id, :name, {include_hidden: false},{:multiple => true})%>

      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>

      <%= f.submit "Create my message", class: "btn btn-primary" %>

      
    <% end %>
  </div>
</div>


