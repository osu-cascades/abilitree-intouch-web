<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title%></td>
            <td><%= link_to 'Show', event, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-mini' %></td>
            <td><%= link_to 'Delete', event, method: :delete, class: 'btn btn-mini', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
