<% provide(:title, "Roles") %>

<h1>Roles</h1>

<p>
  <%= link_to "Create New Role", new_role_path %> 
</p>

<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @roles.each do |role| %>
          <tr>
            <td><%= role.name %></td>
            <td><%= link_to 'Edit', edit_role_path(role) %></td>
            <td><%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>