<%= simple_form_for @user do |f| %>
  
  <%= render 'shared/error_messages', object: @user %>
  
  <%= f.label :first_lame, "First Name" %>
  <%= f.text_field :first_name, class: 'form-control' %>

  <%= f.label :last_name, "Last Name" %>
  <%= f.text_field :last_name, class: 'form-control' %>

  <div>
      <%= f.label :user_type %>
      <%= f.radio_button :user_type, 'client' %> 
      <%= f.label :user_type, "Client" %>
      <%= f.radio_button :user_type, 'staff' %> 
      <%= f.label :user_type, "Staff" %>
      <%= f.radio_button :user_type, 'admin' %> 
      <%= f.label :user_type, "Admin" %>
  </div>

  <%= f.association :groups, as: :check_boxes %>

  <%= f.label :username, "Username" %>
  <%= f.text_field :username, class: 'form-control' %>

  <%= f.label :password, "Password" %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Re-type Password" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit "Update User", class: "btn btn-primary"%>
<% end %>




