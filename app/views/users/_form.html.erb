<%= simple_form_for @user do |f| %>
  
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :first_lame, "First Name" %>
  <%= f.text_field :first_name, class: 'form-control' %>

  <%= f.label :last_name, "Last Name" %>
  <%= f.text_field :last_name, class: 'form-control' %>

  <%= f.input :user_type, collection: @roles, prompt: "Choose User Role", selected: @user.user_type %> 

  <%= f.association :groups, as: :check_boxes %>

  <%= f.label :username, "Username" %>
  <%= f.text_field :username, class: 'form-control' %>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email, class: 'form-control' %>

  <%= f.label :password, "Password" %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Re-type Password" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit "Update User", class: "btn btn-primary"%>
<% end %>




