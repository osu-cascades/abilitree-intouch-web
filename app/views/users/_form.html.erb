<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>
  <%= f.label :first_lame, "First Name" %>
  <%= f.text_field :first_name, class: 'form-control' %>

  <%= f.label :last_name, "Last Name" %>
  <%= f.text_field :last_name, class: 'form-control' %>

  <%= f.label :user_type, "User Type" %>
  <%= f.label :sub_user_type, "(must be 'admin', 'client', or 'staff')"%>
  <%= f.text_field :user_type, class: 'form-control' %>

  <div class="field">
    <%= f.label "Groups" %><br />
    <%= f.collection_check_boxes :group_ids, Group.all, :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <%= f.label :username, "Username" %>
  <%= f.text_field :username, class: 'form-control' %>

  <%= f.label :password, "Password" %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Re-type Password" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit "Update User", class: "btn btn-primary"%>
<% end %>