<% provide(:title, "Users") %>

<h1>Users</h1>

  <p>
    <%= link_to "Create New User", new_user_path, class: 'btn btn-mini' %> 
  </p>

<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>User Type</th>
          <th>Username</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name%></td>
            <td><%= user.last_name %></td>
            <td><%= user.user_type %></td>
            <td><%= user.username %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-mini' %></td>
            <% if user.user_type != "admin" && user.deactivated != true %>
              <td><%= link_to 'Deactivate', user, method: :delete, class: 'btn btn-mini', data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>