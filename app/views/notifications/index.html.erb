<% provide(:title, "Notifications") %>

<!-- Create partial that holds this format? -->

<h1>Notifications</h1>


<p>
  <%= link_to "Create New Notification", new_notification_path, class: 'btn btn-mini' %>
</p>

<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>From</th>
          <th>Date</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @notifications.each do |notification| %>
          <tr>
            <% if notification.id != current_user.id%>
            <td><%= notification.title%></td>
            <td><%= notification.user.first_name %></td>
            <td><%= notification.created_at %></td>
            <td><%= notification.content %></td>
            <td><%= link_to 'Show', notification, class: 'btn btn-mini'  %></td>
            <td><%= link_to 'Delete', notification, method: :delete, class: 'btn btn-mini', data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
<br>
<br>

<h2>Sent Messages</h2>
<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Group Sent To</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @notifications_by.each do |notification| %>
          <tr>
            <% if notification.user_id == current_user.id %>
            <td><%= notification.title %></td>
            <td><%= notification.date %></td>
  
            <td></td>

            <td><%= notification.content %></td>
            <td><%= link_to 'Show', notification, class: 'btn btn-mini'  %></td>
            <td><%= link_to 'Delete', notification, method: :delete, class: 'btn btn-mini', data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
